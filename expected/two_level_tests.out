-- two-level tests

\echo 'two-level test (identity)'
two-level test (identity)
SELECT diff_jsonb($${
  "a": 0,
  "b": {
    "c": 2,
    "d": true
  }
}$$, $${
  "a": 0,
  "b": {
    "c": 2,
    "d": true
  }
}$$);
 diff_jsonb 
------------
 
(1 row)


\echo 'two-level test (delete)'
two-level test (delete)
SELECT diff_jsonb($${
  "a": 0,
  "b": {
    "c": 2,
    "d": true
  }
}$$, $${
  "a": 0,
  "b": {
    "c": 2
  }
}$$);
     diff_jsonb     
--------------------
 {"(-,\"{b,d}\",)"}
(1 row)


\echo 'two-level test (full delete)'
two-level test (full delete)
